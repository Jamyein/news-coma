# Coverage configuration for pytest-cov

[run]
# Source code to measure coverage for
source = src

# Directories to omit from coverage
omit = 
    tests/*
    __pycache__/*
    */__pycache__/*
    .venv/*
    venv/*
    .tox/*
    */migrations/*

# Branch coverage
branch = True

[report]
# Coverage report settings
# Report precision (number of decimal places)
precision = 2

# Show missing lines
show_missing = True

# Skip empty files with no code
skip_empty = True

# Exclude lines matching these patterns from coverage
exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @interface

[html]
# HTML report settings
directory = htmlcov

[xml]
# XML coverage report (for CI)
output = coverage.xml
